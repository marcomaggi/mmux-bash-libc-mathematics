declare -rg MMUX_BASH_LIBC_MATHEMATICS_LIBRARY=libmmux-bash-libc-mathematics.so
declare -rg MMUX_BASH_LIBC_MATHEMATICS_CURRENT=@mmux_bash_libc_mathematics_VERSION_INTERFACE_CURRENT@
declare -rg MMUX_BASH_LIBC_MATHEMATICS_REVISION=@mmux_bash_libc_mathematics_VERSION_INTERFACE_REVISION@
declare -rg MMUX_BASH_LIBC_MATHEMATICS_AGE=@mmux_bash_libc_mathematics_VERSION_INTERFACE_AGE@

enable -f "$MMUX_BASH_LIBC_MATHEMATICS_LIBRARY" mmuxbashlibcmathresultformat

enable -f "$MMUX_BASH_LIBC_MATHEMATICS_LIBRARY" add
enable -f "$MMUX_BASH_LIBC_MATHEMATICS_LIBRARY" sub
enable -f "$MMUX_BASH_LIBC_MATHEMATICS_LIBRARY" mul
enable -f "$MMUX_BASH_LIBC_MATHEMATICS_LIBRARY" div
enable -f "$MMUX_BASH_LIBC_MATHEMATICS_LIBRARY" neg

enable -f "$MMUX_BASH_LIBC_MATHEMATICS_LIBRARY" sin

alias mmux-bash-libc-math-result-format='mmuxbashlibcmathresultformat'

